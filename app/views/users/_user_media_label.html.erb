<div class="level">
    <div class="level-left">
        <div class="level-item">
            <figure class="image is-64x64">
                <% img_src = user.profile.avatar.attached? ? url_for(user.profile.avatar.variant(resize_to_fill: [64, 64])) : "https://via.placeholder.com/64" %>
                <img src=<%= img_src %> alt="" class="is-rounded">
            </figure>
        </div>
        <div class="level-item">
            <div>
            <p class="title is-5">
            <%= link_to user_path(user) do %>
                <%= user.profile.firstname %> <%= user.profile.lastname %>
            <% end %>
            </p>
            <p class="heading"><%= distance_of_time_in_words(DateTime.current, media.created_at) %> ago</p>
            </div>
        </div>
    </div>

    <!-- Yield for user media controls (edit, delete, etc.) -->
    <%= yield %> 
</div>